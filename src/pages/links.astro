---
import GeneralLayout from '@/layouts/GeneralLayout.astro';
import { socials } from '@/lib/config';
import { Image } from 'astro:assets';
import { ExternalLink, Globe, Globe2 } from 'lucide-react';
---

<GeneralLayout>
  <div class='min-h-screen'>
    <div class='container mx-auto max-w-md px-4 py-12'>
      {/* Header */}
      <div class='mb-12 text-center'>
        <div class='mb-6'>
          <Image
            src='/profile-picture.jpg'
            alt="Jacob's profile picture"
            width={128}
            height={128}
            class='mx-auto rounded-full object-cover object-center'
          />
        </div>
        <h1 class='mb-3 font-serif text-4xl font-bold text-balance text-white'>
          Jacob Samorowski
        </h1>
        <p class='font-sans text-lg text-gray-400'>
          Software Developer & Photographer
        </p>
      </div>

      {/* Social Links */}
      <div class='space-y-3'>
        <a
          href='/'
          class='text-card-foreground group flex flex-row items-center justify-between gap-6 overflow-hidden rounded-xl border border-white/10 bg-[#1a1a1a] p-4 py-6 shadow-sm transition-all duration-200 hover:scale-[1.01] hover:border-gray-700 hover:bg-gray-800/50 active:scale-[0.99]'
        >
          <div class='flex items-center gap-4'>
            <Globe2 />

            <div>
              <div class='text-base font-semibold text-white capitalize'>
                Website
              </div>
            </div>
          </div>
          <ExternalLink
            className='h-4 w-4 text-gray-400 transition-colors duration-200 group-hover:text-white'
          />
        </a>
        {
          socials.map((social) => (
            <a
              href={social.url}
              target='_blank'
              rel='noopener noreferrer'
              class='text-card-foreground group flex flex-row items-center justify-between gap-6 overflow-hidden rounded-xl border border-white/10 bg-[#1a1a1a] p-4 py-6 shadow-sm transition-all duration-200 hover:scale-[1.01] hover:border-gray-700 hover:bg-gray-800/50 active:scale-[0.99]'
            >
              <div class='flex items-center gap-4'>
                <img
                  src={`/assets/icons/socials/${social.platform}.svg`}
                  alt={`${social.platform} icon`}
                  width={24}
                  height={24}
                />
                <div>
                  <div class='text-base font-semibold text-white capitalize'>
                    {social.platform === 'twitter'
                      ? 'X (Twitter)'
                      : social.platform}
                  </div>
                  <div class='text-sm text-gray-400'>{social.handle}</div>
                </div>
              </div>
              <ExternalLink className='w-4 h-4 text-gray-400 group-hover:text-white transition-colors duration-200' />
            </a>
          ))
        }
      </div>

      <div
        class='fixed inset-0 -z-50 min-h-screen w-full bg-[radial-gradient(#7979792e_1px,transparent_1px)] [background-size:16px_16px]'
      >
      </div>

      {/* Footer */}
      <div class='mt-12 border-t border-gray-800 pt-8 text-center'>
        <p class='text-sm text-gray-500'>Â© 2024 Jacob Samorowski</p>
      </div>
    </div>
  </div>
</GeneralLayout>
